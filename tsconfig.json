{
	"extends": "@tsconfig/node12/tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,

		"moduleResolution": "node",
		// To enable Babel support
		"allowSyntheticDefaultImports": true,

		"noEmitOnError": true,
		"removeComments": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": false,
		"importsNotUsedAsValues": "error",
		"sourceMap": true,
		"inlineSourceMap": false,
		"stripInternal": true,

		"watch": false, // true breaks CI scripts
		"pretty": true,
		"types": ["node", "jest", "jest-extended", "ts-nameof"],
		"noErrorTruncation": true
	},
	"references": [
		{
			"path": "packages/cc/tsconfig.build.json"
		},
		{
			"path": "packages/config/tsconfig.build.json"
		},
		{
			"path": "packages/core/tsconfig.build.json"
		},
		{
			"path": "packages/host/tsconfig.build.json"
		},
		{
			"path": "packages/maintenance/tsconfig.build.json"
		},
		{
			"path": "packages/nvmedit/tsconfig.build.json"
		},
		{
			"path": "packages/serial/tsconfig.build.json"
		},
		{
			"path": "packages/shared/tsconfig.build.json"
		},
		{
			"path": "packages/testing/tsconfig.build.json"
		},
		{
			"path": "packages/transformers/tsconfig.build.json"
		}
	],
	"include": [
		"packages/**/src/**/*.ts",
		"packages/**/maintenance/**/*.ts",
		"maintenance/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": ["**/build/**", "node_modules/**", "packages/**/node_modules"]
}
